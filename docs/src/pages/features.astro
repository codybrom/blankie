---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import screenshot from "../assets/screenshot.png";
import bg1 from "../assets/bg-1.png";
import bg2 from "../assets/bg-2.png";
import bg3 from "../assets/bg-3.png";
import bg4 from "../assets/bg-4.png";

const title = "Features - Blankie";
---

<Layout title={title}>
  <!-- Hero & High-Quality Audio Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0">
      <Image src={bg2} alt="" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-black/60"></div>
    </div>

    <!-- Hero -->
    <div class="relative max-w-5xl mx-auto px-5 py-20 text-center mt-16">
      <h1
        class="text-4xl md:text-5xl font-semibold leading-tight tracking-tighter"
      >
        Everything you need for a perfect soundscape
      </h1>
    </div>

    <!-- High-Quality Audio -->
    <div class="relative max-w-6xl mx-auto px-5 pb-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-semibold mb-6">ğŸšï¸ High-Quality Audio</h2>
          <p class="text-lg text-gray-300 mb-6">
            14 carefully curated ambient sounds recorded in high fidelity. From
            gentle rain and ocean waves to crackling fireplaces and bustling
            coffee shops.
          </p>
          <ul class="space-y-3 text-gray-300">
            <li class="flex items-center gap-3">
              <span class="text-yellow-300">âœ“</span>
              Individual volume controls for each sound
            </li>
            <li class="flex items-center gap-3">
