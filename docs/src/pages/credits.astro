---
import Layout from "../layouts/Layout.astro";
import soundsJSON from "../../../Blankie/Resources/sounds.json";
import ccSvg from "../assets/cc.svg";
import bySvg from "../assets/by.svg";

const title = "Credits";

interface Sound {
  title: string;
  author: string;
  authorUrl: string | null;
  license: string;
  editor?: string | null;
  editorUrl?: string | null;
  soundUrl: string | null;
  soundName?: string;
  description?: string;
  note?: string;
}

let sounds: Sound[] = [];

if (soundsJSON && soundsJSON.sounds) {
  sounds = soundsJSON.sounds;
} else {
  console.error("Error: Invalid JSON structure or missing 'sounds' array");
}

function getLicenseText(license: string) {
  switch (license) {
    case "cc0":
      return "CC0";
    case "ccBy3":
      return "CC BY 3.0";
    case "ccBy4":
      return "CC BY 4.0";
    case "publicDomain":
      return "Public Domain";
    default:
      return "Unknown License";
  }
}

function getLicenseURL(license: string) {
  switch (license) {
    case "cc0":
      return "https://creativecommons.org/publicdomain/zero/1.0/";
    case "ccBy3":
      return "https://creativecommons.org/licenses/by/3.0/";
    case "ccBy4":
      return "https://creativecommons.org/licenses/by/4.0/";
    case "publicDomain":
      return "https://creativecommons.org/publicdomain/mark/1.0/";
    default:
      return null;
  }
}
